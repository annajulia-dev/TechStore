@model TechStore.Models.Servico
@{
    ViewData["Title"] = "Editar Serviço";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loja do Hugo - @ViewData["Title"]</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/ProductEdit.css" />
</head>
<body>

    <aside>
        <div>
            <div class="logo">Loja do Hugo</div>
            <nav>
                <ul>
                    <li>
                        <a asp-action="Enter" asp-controller="Home">
                            <i class="ph ph-squares-four"></i> Home
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Produto">
                            <i class="ph ph-package"></i> Produtos
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Servico" class="active">
                            <i class="ph ph-wrench"></i> Serviços
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="user-profile">
            <div class="avatar-initial">J</div>
            <div class="user-info">
                <h4>João Pires</h4>
                <p>joaopires@emailsdasilva.com</p>
            </div>
            <i class="ph ph-caret-right"></i>
        </div>
    </aside>

    <main>
        <h2>Editar Serviço</h2>

        <form asp-action="Edit" asp-controller="Servico" enctype="multipart/form-data" class="form-card">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Titulo">Título do Serviço</label>
                <input asp-for="Titulo" type="text" id="titulo" placeholder="Ex: Manutenção de Redes">
                <span asp-validation-for="Titulo" style="color:red; font-size:12px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao">Descrição Detalhada</label>
                <textarea asp-for="Descricao" id="descricao" placeholder="Descreva o que está incluso no serviço..."></textarea>
                <span asp-validation-for="Descricao" style="color:red; font-size:12px;"></span>
            </div>

            <div class="form-row">
                <div>
                    <label asp-for="Valor">Valor (R$)</label>
                    <input asp-for="Valor" type="number" id="valor" step="0.01">
                    <span asp-validation-for="Valor" style="color:red; font-size:12px;"></span>
                </div>
                <div></div>
            </div>

            <div class="form-group">
                <label>Gerenciar Imagens</label>
                <div class="photos-container">

                    <div class="photo-box">
                        <span style="font-size: 12px; color: var(--text-secondary); margin-bottom: 4px;">Imagem Atual</span>
                        <div class="old-photo-preview">
                            @if (Model.Foto != null && Model.Foto.Length > 0)
                            {
                                <img src="@Url.Action("PegarFoto", "Servico", new { id = Model.Id })" style="max-width: 100%; max-height: 100%; object-fit: contain;" />
                            }
                            else
                            {
                                <div style="text-align:center; color: #9ca3af;">
                                    <i class="ph ph-image" style="font-size: 32px; margin-bottom: 4px;"></i>
                                    <p>Sem imagem</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="photo-box">
                        <span style="font-size: 12px; color: var(--text-secondary); margin-bottom: 4px;">Substituir Foto</span>
                        <label class="upload-area">
                            <input name="novaImagem" type="file" hidden accept="image/*">

                            <i class="ph ph-upload-simple upload-icon"></i>
                            <p class="upload-text"><span>Clique para enviar</span> ou arraste</p>
                            <p style="font-size: 11px; color: #9ca3af; margin-top: 4px;">PNG, JPG até 5MB</p>
                        </label>
                    </div>

                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="Servico" style="text-decoration:none;">
                    <button type="button" class="btn btn-cancel">Cancelar</button>
                </a>
                <button type="submit" class="btn btn-save">Salvar Alterações</button>
            </div>

        </form>
    </main>

</body>
</html>