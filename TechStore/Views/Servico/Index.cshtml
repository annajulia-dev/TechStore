@model IEnumerable<TechStore.Models.Servico>
@{
    ViewData["Title"] = "Serviços";
}

<style>
    .card-image {
        width: 100%; 
        height: 140px;
        object-fit: cover; 
        object-position: center;

        background-color: #e5e7eb;
        border-radius: 8px;
        margin-bottom: 16px;
        display: block; 
    }
</style>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loja do Hugo - Serviços</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/ServicoIndex.css" />

</head>
<body>

    <aside>
        <div>
            <div class="logo">Loja do Hugo</div>
            <nav>
                <ul>
                    <li>
                        <a asp-action="Enter" asp-controller="Home">
                            <i class="ph ph-squares-four"></i>
                            Home
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Produto">
                            <i class="ph ph-package"></i>
                            Produtos
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Servico" class="active">
                            <i class="ph ph-wrench"></i>
                            Serviços
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Categoria">
                            <i class="ph ph-tag"></i> Categorias
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="user-profile">
            <div class="avatar-initial">J</div>
            <div class="user-info">
                <h4>João Pires</h4>
                <p>joaopires@emailsdasilva.com</p>
            </div>
            <i class="ph ph-caret-right"></i>
        </div>
    </aside>

    <main>
        <h2>Serviços</h2>

        <section class="products-grid">
            @if (Model != null && Model.Any())
            {
                @foreach (var servico in Model)
                {
                    <a asp-action="Details" asp-route-id="@servico.Id" asp-controller="Servico" style="text-decoration: none; color: inherit;">
                        <div class="product-card">
                            <img class="card-image" src="@Url.Action("PegarFoto", "Servico", new { id = servico.Id })" alt="@servico.Titulo" />

                            <h3>@servico.Titulo</h3>
                            <p class="product-price">R$: @servico.Valor.ToString("N2")</p>
                        </div>
                    </a>
                }
            }
            else
            {
                <p style="color: var(--text-secondary);">Nenhum serviço cadastrado.</p>
            }
        </section>

        <a asp-action="Create" asp-controller="Servico" style="text-decoration: none;">
            <button class="btn-create">
                <i class="ph ph-plus" style="font-size: 16px;"></i>
                Criar Serviço
            </button>
        </a>

        <h2>Pedidos</h2>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th><i class="ph ph-package"></i> Pedido</th>
                        <th><i class="ph ph-text-aa"></i> Nome</th>
                        <th><i class="ph ph-record"></i> Status</th>
                        <th><i class="ph ph-calendar-blank"></i> Pedido Em</th>
                        <th><i class="ph ph-calendar-check"></i> Entregue Em</th>
                        <th><i class="ph ph-stack"></i> Qtd</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="link-product">Serviço 1</a></td>
                        <td>
                            <div class="user-cell">
                                <div class="avatar-initial" style="background: #99f6e4; color: #115e59; width: 28px; height: 28px; font-size: 12px;">M</div>
                                Mariana Cardoso
                            </div>
                        </td>
                        <td><span class="status-badge status-delivered">Concluído</span></td>
                        <td>21:30, 24 de Abril, 2026</td>
                        <td>21:47, 24 de Abril, 2026</td>
                        <td>01</td>
                    </tr>
                    <tr>
                        <td><a href="#" class="link-product">Serviço 2</a></td>
                        <td>
                            <div class="user-cell">
                                <div class="avatar-initial" style="background: #bfdbfe; color: #1e40af; width: 28px; height: 28px; font-size: 12px;">A</div>
                                Anna Julia
                            </div>
                        </td>
                        <td><span class="status-badge status-progress">Em Andamento</span></td>
                        <td>22:59, 24 de Abril, 2026</td>
                        <td>-</td>
                        <td>01</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </main>
</body>
</html>